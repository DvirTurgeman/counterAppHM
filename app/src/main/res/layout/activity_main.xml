<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <!--    My name      -->
    <TextView
        android:id="@+id/myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:text="Dvir Turgeman"
        android:textStyle="bold"
        android:layout_toRightOf="@id/profile"
        android:layout_alignBottom="@id/profile"
        />


    <!--    Profile image    -->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_profile"

        />
    <!--    Guid Line    -->
    <TextView
        android:id="@+id/centerGuideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <!--    Guid Line  horizontal    -->
    <TextView
        android:id="@+id/horizontalGuideline"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_centerInParent="true"
        />

    <!--    BackGround for id      -->
    <TextView
        android:layout_width="410dp"
        android:layout_height="104dp"
        android:layout_alignLeft="@id/myID"
        android:layout_alignRight="@id/myID"
        android:layout_alignBottom="@id/myID"
        android:layout_marginLeft="-103dp"
        android:layout_marginRight="-102dp" 
        android:background="@color/black"
        />

    <!--    Counter      -->
    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/myID"
        android:text="00"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="40dp"
        />

    <!--   ID text      -->
    <TextView
        android:id="@+id/myID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="24dp"
        android:textSize="40sp"
        android:text="322533183"
        android:textStyle="bold"
        />




    <!--   Buttons     -->


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_minus"
        android:layout_below="@id/horizontalGuideline"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:paddingTop="1dp"
        android:paddingBottom="20dp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_plus"
        android:layout_above="@id/horizontalGuideline"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="1dp"



        />




<!--  ###############################################################  -->



</RelativeLayout>